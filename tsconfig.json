{
  "compilerOptions": {
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "module": "CommonJS",
    "target": "es2015",
    "esModuleInterop": true,
    "lib": ["esnext"],
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "typeRoots": ["./@types", "./node_modules/@types"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "src/**/*.test.ts"]
}
